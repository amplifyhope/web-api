{
  "name": "amplify-hope-api",
  "version": "1.7.1",
  "description": "NodeJS API backend for amplify hope website",
  "main": "src/index.ts",
  "author": "Anthony Giannell",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "eslint src",
    "rebuild-db": "docker compose stop db; docker compose rm -f db; docker compose up -d",
    "start": "NODE_OPTIONS='--unhandled-rejections=warn' ts-node src/index.ts",
    "start:dev": "NODE_OPTIONS='--unhandled-rejections=warn' ts-node-dev src/index.ts",
    "test:unit": "NODE_ENV=development ts-mocha '**/*.unit.ts'",
    "typecheck": "tsc --noEmit",
    "version": "echo $npm_package_version"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "@sentry/node": "^8.50.0",
    "@sentry/profiling-node": "^8.50.0",
    "camelcase-keys": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "ramda": "^0.30.1",
    "snakecase-keys": "^8.0.1",
    "stripe": "^17.5.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^8.4.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.11.2",
    "@types/pg": "^8.11.10",
    "@types/prettier": "^2.7.1",
    "@types/ramda": "^0.30.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chai": "^4.3.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "mocha": "^11.1.0",
    "prettier": "^3.4.2",
    "ts-mocha": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "engines": {
    "node": "20"
  }
}

{
  "name": "amplify-hope-api",
  "version": "1.6.0",
  "description": "NodeJS API backend for amplify hope website",
  "main": "src/index.ts",
  "author": "Anthony Giannell",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "rebuild-db": "docker compose stop db; docker compose rm -f db; docker compose up -d",
    "start": "NODE_OPTIONS='--unhandled-rejections=warn' ts-node src/index.ts",
    "start:dev": "NODE_OPTIONS='--unhandled-rejections=warn' ts-node-dev src/index.ts",
    "test:unit": "NODE_ENV=development ts-mocha '**/*.unit.ts'",
    "typecheck": "tsc --noEmit",
    "version": "echo $npm_package_version"
  },
  "dependencies": {
    "@sentry/node": "^7.81.1",
    "@sentry/profiling-node": "^1.2.6",
    "@stripe/stripe-js": "^1.22.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "body-parser": "^1.20.1",
    "camelcase-keys": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "micro": "^9.4.1",
    "pg": "^8.9.0",
    "ramda": "^0.28.0",
    "snakecase-keys": "^5.4.5",
    "stripe": "^14.22.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/eslint": "^8.4.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.2",
    "@types/pg": "^8.6.6",
    "@types/prettier": "^2.7.1",
    "@types/ramda": "^0.28.23",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chai": "^4.3.6",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "ts-mocha": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "18"
  }
